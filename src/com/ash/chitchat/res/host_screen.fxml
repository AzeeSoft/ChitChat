<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ash.chitchat.HostScreenController">
   <children>
      <VBox layoutX="140.0" layoutY="218.0" prefWidth="320.0">
         <children>
            <HBox>
               <children>
                  <Label contentDisplay="RIGHT" prefHeight="26.0" prefWidth="120.0" text="Name :" textAlignment="RIGHT" textFill="WHITE">
                     <font>
                        <Font name="Avant Garde Book BT" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="NameTF" onAction="#startHosting" prefHeight="25.0" prefWidth="200.0" promptText="Enter your name...">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <AnchorPane>
               <children>
                  <Button fx:id="hostBtn" alignment="TOP_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#startHosting" style="-fx-background-color: #7f9d4a;" text="Host" textAlignment="CENTER" AnchorPane.rightAnchor="0.0">
                     <font>
                        <Font name="Calibri Bold" size="15.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </AnchorPane>
         </children>
      </VBox>
      <Label layoutX="224.0" layoutY="83.0" text="Host the Chat" textFill="WHITE">
         <font>
            <Font name="Avant Garde Medium BT" size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
